<Window x:Class="EnigmaMachine.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EnigmaMachine"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="400"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="600"/>
        </Grid.ColumnDefinitions>



        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,553,0">
            <Label Content="Control"/>
            <Label Content="Ring 1 (S)"/>
            <Label Content="Ring 2 (M)"/>
            <Label Content="Ring 3 (H)"/>
            <Label Content="" Height="8"/>
            <Label Content="Input Message:"/>
            <Label Content="Input"/>
            <Label Content="" Height="8"/>
            <Label Content="Encrypted Message:"/>
            <Label Content="Encrypt"/>
            <Label Content="" Height="8"/>
            <Label Content="Encrypted Message with Mirroring:" Grid.ColumnSpan="2"/>
            <Label Content="Mirror"/>
        </StackPanel>

        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
            <Label Content="H" VerticalAlignment="Center"/>
            <TextBox TextWrapping="Wrap" Text="0-25" Height="25" Width="40" VerticalContentAlignment="Center"/>
            <Label Content="M" VerticalAlignment="Center"/>
            <TextBox TextWrapping="Wrap" Text="0-25" Height="25" Width="40" VerticalContentAlignment="Center"/>
            <Label Content="S" VerticalAlignment="Center"/>
            <TextBox TextWrapping="Wrap" Text="0-25" Height="25" Width="40" VerticalContentAlignment="Center"/>
        </StackPanel>

        <Button Content="Rotor On" HorizontalAlignment="Left" Margin="4,0,0,0" VerticalAlignment="Center"/>
    </Grid>
</Window>
